<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
          <record id="report_booking_wizard" model="ir.ui.view">
            <field name="name">report.booking.wizard</field>
            <field name="model">report.booking.wizard</field>
            <field name="arch" type="xml">
                <form string="Opciones de reporte">
                    <group col="4">
                        <field name="company_id" options="{'no_create': True}" groups="base.group_multi_company"
                               colspan="4"/>
                        <field name="date_from" colspan="2"/>
                        <field name="date_to" colspan="2"/>
                    </group>
                    <footer>
                        <button name="print_reportliquidacionbooking_xls" string="Imprimir Excel" type="object"
                                default_focus="1"
                                class="oe_highlight"/>
                        <button string="Cancelar" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_report_booking_wizard" model="ir.actions.act_window">
            <field name="name">Reporte de Liquidaciones y Facturas Booking Pendientes de Pago</field>
            <field name="res_model">report.booking.wizard</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="report_booking_wizard"/>
            <field name="target">new</field>
        </record>

        <menuitem id="menu_report_booking_wizard" name="Informes SBC booking" parent="account.menu_finance_reports"
                  sequence="1"/>

        <menuitem id="menu_report_booking" name="Liquidacion y Facturas Booking de Compra"
                  action="action_report_booking_wizard"
                  parent="menu_report_booking_wizard" sequence="5"/>

    </data>
</odoo>
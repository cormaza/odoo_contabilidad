<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="account_detraccion_view_form" model="ir.ui.view">
            <field name="name">detraccion.form</field>
            <field name="model">account.masivo.detraccion</field>
            <field name="arch" type="xml">
                <form string="Pago Masivo Detraccion">
                    <header>
                        <button name="action_pago_detraccion" type="object" state="draft" string="Validar"
                                class="oe_highlight" groups="account.group_account_invoice"/>
                        <button name="%(account.action_account_invoice_payment)d"
                                type="action" state="open" string="Registrar Pago"
                                groups="account.group_account_invoice" class="oe_highlight"/>
                        <button name="action_invoice_cancel" type="object" state="draft,open"
                                string="Cancelar Recibo" groups="base.group_no_one"/>
                        <field name="state" widget="statusbar" nolabel="1" statusbar_visible="draft,open,reconcile"/>
                    </header>
                    <sheet string="Pago Masivo Detraccion">
                        <div>
                            <h1 class="mt0">
                                <field name="order_detraccion" class="oe_inline" readonly="1"
                                       attrs="{'invisible': [('state', '=', 'draft')]}"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="tipo_partner" widget="radio"/>
                                <field name="partner_id"
                                       attrs="{'required': [('tipo_partner', 'in', ('supplier', 'customer'))]}"
                                       context="{'default_is_company': True,
                                       'default_supplier': tipo_partner == 'supplier',
                                       'default_customer': tipo_partner == 'customer'}"/>
                                <!--<field name="partner_id" domain="[('tipo_partner','=',True)]"/>-->
                                <field name="pago"
                                       domain="['&amp;',('state','=','posted'),('partner_id','=',partner_id)]"/>
                                <field name="monto_pago" readonly="1"/>
                            </group>
                            <group>
                                <field context="{'partner_id': partner_id}"
                                       name="facturas_lineas_ids">
                                    <tree string="LÃ­neas" editable="bottom">
                                        <field name="sequence" widget="handle"/>
                                        <field name="factura_relacionada" string="Factura"
                                               domain="['&amp;','&amp;',
                                               ('partner_id','=',parent.partner_id),
                                               ('state', 'in', ['open']),
                                               ('pagina_detraccion', '=', True)]"/>
                                        <field name="descripcion"/>
                                        <field name="monto"/>
                                        <field name="sub_total"/>
                                    </tree>
                                </field>

                                <group class="oe_subtotal_footer oe_right">
                                    <field name="monto_total" class="oe_subtotal_footer_separator"
                                           string="Total Neto"/>
                                </group>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>

        </record>
        <record id="account_detraccion_view_tree" model="ir.ui.view">
            <field name="name">detraccion.tree</field>
            <field name="model">account.masivo.detraccion</field>
            <field name="arch" type="xml">
                <tree decoration-info="state == 'draft'" decoration-muted="state == 'reconcile'"
                      string="Pago Masivo Detracciones">
                    <field name="tipo_partner"/>
                    <field name="partner_id" groups="base.group_user" string="Persona/Empresa"/>
                </tree>
            </field>
        </record>

        <record id="account_invoice_detraccion_tree2" model="ir.actions.act_window">
            <field name="name">Pago Masivo Detraccion</field>
            <field name="res_model">account.masivo.detraccion</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field eval="False" name="view_id"/>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click para registrar Pago de detracciones.
                </p>
                <p>
                    Puede crear un pago Pago de detracciones...
                </p>
            </field>
        </record>


        <record id="account_invoice_detraccion_tree" model="ir.actions.act_window.view">
            <field eval="1" name="sequence"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="account_detraccion_view_tree"/>
            <field name="act_window_id" ref="account_invoice_detraccion_tree2"/>
        </record>

        <record id="account_invoice_detraccion_form" model="ir.actions.act_window.view">
            <field eval="2" name="sequence"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="account_detraccion_view_form"/>
            <field name="act_window_id" ref="account_invoice_detraccion_tree2"/>
        </record>
        <menuitem id="menu_action_pago_detracciones" name="Cruce masivos de Pagos y Detracciones"
                  parent="account.menu_finance_entries" action="account_invoice_detraccion_tree2"
                  sequence="26"/>
    </data>
</odoo>
                    </sheet>

                </form>
            </field>
        </record>

        <record id="action_trazabilidad" model="ir.actions.act_window">
            <field name="name">Trazabilidad</field>
            <field name="res_model">crm.trazabilidad</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">

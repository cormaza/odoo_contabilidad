<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="account_notas_contables_view_form" model="ir.ui.view">
            <field name="name">account.liquidacion.form</field>
            <field name="model">account.liquidacion</field>
            <field name="arch" type="xml">
                <form string="Liquidación">
                    <header>
                        <field name="state" widget="statusbar" statusbar_visible="draft,open,confirmed" />
                    </header>
                    <sheet string="Liquidación">
                        <h1 class="mt0">
                            <field name="numero" readonly="1" class="oe_inline" attrs="{'invisible': [('state','in',('draft',))]}"/>
                        </h1>
                        <group>
                            <group>
                                <field name="partner_id"/>
                                <field name="serie_id"/>
                                <field name="tipo_documento" domain="[('code', '=', '54')]"/>
                            </group>
                            <group>
                                <field name="date_invoice"/>
                                <field name="date_due"/>
                                <field name="check_dua"/>
                            </group>
                        </group>

                        <notebook>
                            <page string="Facturas de Compra">
                                <field name="liquidacion_line_ids" widget="one2many_list" nolabel="1" mode="tree,kanban">
                                    <tree string="Pagos" editable="bottom">
                                        <field name="invoice_id"
                                               domain="[('type','=','in_invoice'),
                                               ('state', 'in', ['open', 'paid', 'proforma','proforma2'])]"/>
                                        <field name="concepto_pago"/>
                                        <field name="amount_total"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Datos para DUA" attrs="{'invisible':[('check_dua','=',False)]}">
                                <group>
                                    <group>
                                        <field name="ref_dua"/>
                                        <field name="linea_area_dua"/>
                                        <field name="awb_dua"/>
                                        <field name="dam_dua"/>
                                        <field name="cont_dua"/>
                                        <field name="ref_cli_dua"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="create_liquidacion_tree" model="ir.ui.view">
            <field name="name">account.liquidacion.tree</field>
            <field name="model">account.liquidacion</field>
            <field name="arch" type="xml">
                <tree string="Liquidaciones">
                    <field name="partner_id"/>
                    <field name="numero"/>
                    <field name="date_invoice"/>
                    <field name="date_due"/>
                    <field name="amount_total"/>
                </tree>
            </field>
        </record>

        <record id="action_pago_liquidacion_tree" model="ir.actions.act_window">
            <field name="name">Liquidaciones</field>
            <field name="res_model">account.liquidacion</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field eval="False" name="view_id"/>
        </record>

        <menuitem id="menu_finance_liquidaciones" name="Liquidaciones" action="action_pago_liquidacion_tree" parent="account.menu_finance" sequence="13"/>
    </data>
</odoo>